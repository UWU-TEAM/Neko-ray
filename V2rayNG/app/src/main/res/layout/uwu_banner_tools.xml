<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToOutline="true">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        android:baselineAligned="false">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200.0dip"
            android:layout_marginHorizontal="16.0dip"
            app:strokeWidth="0.0dip"
            app:cardBackgroundColor="@color/uwu_bg_card"
            app:cardCornerRadius="24.0dip"
            app:cardElevation="0.0dip"
            app:rippleColor="@android:color/transparent">

            <ImageView
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/uwu_addon_logo"
                android:adjustViewBounds="true"
                app:tint="?attr/colorPrimary"/>

            <ImageView
                android:layout_gravity="end|bottom|center"
                android:layout_width="180.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="30.0dip"
                android:layout_marginBottom="0.0dip"
                android:src="@drawable/uwu_banner_image_4"
                android:adjustViewBounds="true"
                android:layout_marginEnd="-40.0dip"/>

            <com.airbnb.lottie.LottieAnimationView
                android:layout_marginStart="20.0dip"
                android:layout_gravity="start|center"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:alpha="0.4"
                app:lottie_colorFilter="?attr/colorPrimary"
                app:lottie_autoPlay="true"
                app:lottie_renderMode="software"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/uwu_lottie_hexagon" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:gravity="center_horizontal"
                    android:layout_gravity="center|top"
                    android:background="@drawable/uwu_bg_sin"
                    android:clickable="false"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="-30dp"
                    android:backgroundTint="@color/uwu_bg_color"
                    android:layout_marginHorizontal="75dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_gravity="center|top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:layout_marginBottom="5.0dip"
                android:layout_marginHorizontal="16.0dip">

                <LinearLayout
                    android:layout_gravity="start|center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:padding="2.0dip"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:src="@drawable/ic_rounded"
                        app:tint="?attr/android:textColorSecondary"/>

                    <ImageView
                        android:padding="2.0dip"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:src="@drawable/ic_rounded"
                        app:tint="?attr/colorPrimaryContainer"/>

                    <ImageView
                        android:padding="2.0dip"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:src="@drawable/ic_rounded"
                        app:tint="?colorPrimary"/>

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_gravity="center|top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:layout_marginBottom="5.0dip"
                android:layout_marginHorizontal="16.0dip">

                <LinearLayout
                    android:layout_gravity="end|center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:padding="2.0dip"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:src="@drawable/ic_rounded"
                        app:tint="?attr/colorPrimary"/>

                    <ImageView
                        android:padding="2.0dip"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:src="@drawable/ic_rounded"
                        app:tint="?attr/colorPrimaryContainer"/>

                    <ImageView
                        android:padding="2.0dip"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:src="@drawable/ic_rounded"
                        app:tint="?android:textColorSecondary"/>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20.0dip">

                <TextView
                    android:textSize="17.0sp"
                    android:textColor="?android:textColorSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip"
                    android:text="@string/uwu_title_dashboard_tools"
                    android:includeFontPadding="false" />

                <TextView
                    android:textSize="24.0sp"
                    android:textStyle="bold"
                    android:textColor="?android:textColorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:text="@string/uwu_summary_dashboard_tools"
                    android:layout_marginEnd="110.0dip"/>

            </LinearLayout>

            <View
                android:gravity="center_horizontal"
                android:layout_gravity="bottom|center"
                android:background="@drawable/uwu_bg_sin"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="-30dp"
                android:backgroundTint="@color/uwu_bg_color"
                android:layout_marginHorizontal="75dp"/>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</FrameLayout>
