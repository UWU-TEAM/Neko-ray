<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.AppBarLayout
            android:theme="@style/AppTheme.AppBarOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:theme="@style/AppTheme.SearchView"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </com.google.android.material.appbar.AppBarLayout>
        <FrameLayout
            android:orientation="vertical"
            android:id="@+id/uwu_header_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:background="?attr/colorThemeUwu"
                android:paddingBottom="16.0dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.0dip"
                android:layout_marginBottom="0.0dip"
                android:layout_marginStart="0.0dip"
                android:layout_marginEnd="0.0dip">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/uwu_menu_tool"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0.0dip"
                        android:layout_marginBottom="0.0dip"
                        android:layout_marginStart="16.0dip"
                        android:layout_marginEnd="8.0dip"
                        app:cardBackgroundColor="@color/uwu_bg_card"
                        app:cardCornerRadius="24.0dip"
                        app:cardElevation="0.0dip"
                        app:strokeWidth="0.0dip">
                        <FrameLayout
                            android:background="#00000000"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                android:id="@+id/uwu_about"
                                android:padding="16.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0">
                                <ImageView
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:id="@+id/icon_logo_neko"
                                    android:layout_width="100.0dip"
                                    android:layout_height="100.0dip"
                                    android:src="@drawable/uwu_banner_image"
                                    app:tint="?attr/colorPrimary" />
                            </LinearLayout>
                        </FrameLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.0dip"
                        android:layout_marginBottom="8.0dip"
                        android:onClick="uwuSpeedTest"
                        android:layout_marginStart="8.0dip"
                        android:layout_marginEnd="16.0dip"
                        app:cardBackgroundColor="@color/uwu_bg_card"
                        app:cardCornerRadius="24.0dip"
                        app:cardElevation="0.0dip"
                        app:strokeWidth="0.0dip">
                        <FrameLayout
                            android:background="#00000000"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="18.0dip"
                                android:paddingBottom="16.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:paddingStart="16.0dip"
                                android:paddingEnd="16.0dip">
                                <ImageView
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:id="@+id/icon_uwu_speedtest"
                                    android:layout_width="25.0dip"
                                    android:layout_height="25.0dip"
                                    android:src="@drawable/uwu_speedometer"
                                    app:tint="?attr/colorPrimary" />
                                <TextView
                                    android:textSize="14.0sp"
                                    android:textColor="?android:textColorSecondary"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8.0dip"
                                    android:text="@string/uwu_speedtest_title"
                                    android:singleLine="false"
                                    android:layout_below="@+id/icon_uwu_speedtest" />
                            </LinearLayout>
                        </FrameLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.0dip"
                        android:layout_marginBottom="0.0dip"
                        android:onClick="UwuAbout"
                        android:layout_marginStart="8.0dip"
                        android:layout_marginEnd="16.0dip"
                        app:cardBackgroundColor="@color/uwu_bg_card"
                        app:cardCornerRadius="24.0dip"
                        app:cardElevation="0.0dip"
                        app:strokeWidth="0.0dip">
                        <FrameLayout
                            android:background="#00000000"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="18.0dip"
                                android:paddingBottom="16.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:paddingStart="16.0dip"
                                android:paddingEnd="16.0dip">
                                <ImageView
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:id="@+id/icon_uwu_about"
                                    android:layout_width="25.0dip"
                                    android:layout_height="25.0dip"
                                    android:src="@drawable/uwu_about"
                                    app:tint="?attr/colorPrimary" />
                                <TextView
                                    android:textSize="14.0sp"
                                    android:textColor="?android:textColorSecondary"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8.0dip"
                                    android:text="@string/uwu_about"
                                    android:singleLine="false"
                                    android:layout_below="@+id/icon_uwu_about" />
                            </LinearLayout>
                        </FrameLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/main_content"
                android:background="@drawable/uwu_background_lengkung"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/pb_waiting"
                        android:paddingTop="8.0dip"
                        android:paddingBottom="0.0dip"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminate="true"
                        android:paddingStart="8.0dip"
                        android:paddingEnd="8.0dip"
                        android:layout_marginStart="20.0dip"
                        android:layout_marginEnd="20.0dip"
                        app:indicatorColor="?attr/colorThemeUwu" />
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_group"
                        android:background="@drawable/uwu_tab_bg"
                        android:padding="6.0dip"
                        android:layout_width="match_parent"
                        android:layout_height="55.0dip"
                        android:layout_marginLeft="20.0dip"
                        android:layout_marginTop="0.0dip"
                        android:layout_marginRight="20.0dip"
                        android:layout_marginBottom="8.0dip"
                        android:minHeight="?attr/actionBarSize"
                        android:backgroundTint="@color/uwu_bg_card"
                        app:tabGravity="fill"
                        app:tabIndicator="@drawable/uwu_tab_indicator"
                        app:tabIndicatorAnimationMode="elastic"
                        app:tabIndicatorColor="@android:color/transparent"
                        app:tabIndicatorFullWidth="true"
                        app:tabIndicatorGravity="stretch"
                        app:tabIndicatorHeight="0.0dip"
                        app:tabMode="scrollable"
                        app:tabRippleColor="@android:color/transparent"
                        app:tabSelectedTextColor="@color/colorText_ActionBar"
                        app:tabTextColor="?android:textColorPrimary" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:nextFocusRight="@+id/fab"
                        android:layout_width="match_parent"
                        android:layout_height="0.0dip"
                        android:layout_marginTop="0.0dip"
                        android:layout_weight="1.0" />
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0.0dip"
                    android:layout_marginRight="0.0dip"
                    android:layout_marginBottom="16.0dip">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0.0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0">
                        <com.neko.expandable.layout.ExpandableView
                            android:id="@+id/uwu_connection_expanded"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="55.0dip"
                                android:layout_marginLeft="16.0dip"
                                android:layout_marginTop="0.0dip"
                                android:layout_marginRight="4.0dip"
                                android:layout_marginBottom="16.0dip"
                                android:minHeight="?attr/actionBarSize"
                                app:cardBackgroundColor="?attr/colorThemeUwu"
                                app:cardCornerRadius="15.0dip"
                                app:cardElevation="2.0dip"
                                app:contentInsetStart="0.0dip">
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:orientation="vertical"
                                    android:id="@+id/layout_test"
                                    android:background="?android:selectableItemBackground"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minHeight="?attr/actionBarSize">
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="10.0dip"
                                        android:paddingEnd="10.0dip">
                                        <TextView
                                            android:textSize="14.0sp"
                                            android:textColor="@color/colorText_ActionBar"
                                            android:layout_gravity="fill_horizontal"
                                            android:id="@+id/tv_test_state"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/connection_test_pending"
                                            android:singleLine="false" />
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </com.neko.expandable.layout.ExpandableView>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:layout_gravity="end|bottom|center"
                                android:id="@+id/fab"
                                android:focusable="true"
                                android:nextFocusLeft="@+id/uwu_about"
                                android:clickable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4.0dip"
                                android:layout_marginTop="0.0dip"
                                android:layout_marginRight="16.0dip"
                                android:layout_marginBottom="16.0dip"
                                android:src="@drawable/ic_play_24dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                app:layout_anchorGravity="end|bottom|center"
                                app:shapeAppearanceOverlay="@style/fab_square"
                                app:tint="@color/colorText_ActionBar"
                                style="@style/Uwu.Design.FloatingActionButton" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </RelativeLayout>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@null"
        app:itemIconTint="@null"
        app:menu="@null">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:background="@drawable/uwu_background_drawer_lengkung1"
                    android:paddingTop="10.0dip"
                    android:paddingBottom="0.0dip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:layout_marginTop="30.0dip"
                        android:layout_marginRight="10.0dip">
                        <com.google.android.material.card.MaterialCardView
                            android:paddingTop="10.0dip"
                            android:paddingBottom="10.0dip"
                            android:layout_width="120.0dip"
                            android:layout_height="120.0dip"
                            app:cardBackgroundColor="@color/uwu_bg"
                            app:cardCornerRadius="24.0dip"
                            app:cardElevation="0.0dip"
                            app:rippleColor="#00000000"
                            app:strokeColor="@color/colorText_ActionBar"
                            app:strokeWidth="3.0dip">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/uwu_banner_profile"
                                android:scaleType="centerCrop" />
                            <ImageView
                                android:gravity="center"
                                android:layout_gravity="bottom|center"
                                android:background="@drawable/uwu_bg_circle_arrow"
                                android:padding="2.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10.0dip"
                                android:src="@drawable/uwu_profile_edit"
                                android:layout_centerVertical="true"
                                android:onClick="uwuEditProfile"
                                android:layout_alignParentEnd="true"
                                android:backgroundTint="?attr/colorThemeUwu"
                                app:tint="?attr/colorIcon" />
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                    <TextView
                        android:textSize="20.0sp"
                        android:textColor="@color/colorText_ActionBar"
                        android:gravity="center"
                        android:id="@+id/uwu_username"
                        android:paddingLeft="16.0dip"
                        android:paddingTop="10.0dip"
                        android:paddingRight="8.0dip"
                        android:paddingBottom="0.0dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10.0dip"
                        android:layout_marginBottom="0.0dip"
                        android:text="@string/uwu_header_title" />
                    <com.neko.marquee.text.Grettings
                        android:textSize="18.0sp"
                        android:textColor="@color/colorText_ActionBar"
                        android:gravity="center"
                        android:paddingLeft="16.0dip"
                        android:paddingTop="5.0dip"
                        android:paddingRight="8.0dip"
                        android:paddingBottom="5.0dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10.0dip"
                        android:layout_marginBottom="10.0dip"
                        android:singleLine="true" />
                </LinearLayout>
                <RelativeLayout
                    android:background="?attr/colorThemeUwu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:background="@drawable/uwu_background_drawer_lengkung2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/uwu_exit"
                        android:layout_alignParentTop="true">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingTop="16.0dip"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0.0dip"
                            android:layout_marginBottom="0.0dip"
                            android:layout_marginStart="0.0dip"
                            android:layout_marginEnd="0.0dip">
                            <androidx.core.widget.NestedScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rv_database"
                                        android:layout_width="match_parent"
                                        android:layout_height="0.0dip"
                                        android:layout_weight="1.0"
                                        android:nestedScrollingEnabled="false"
                                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                                </LinearLayout>
                            </androidx.core.widget.NestedScrollView>
                        </LinearLayout>
                    </FrameLayout>
                    <LinearLayout
                        android:gravity="bottom|center"
                        android:layout_gravity="bottom|center"
                        android:orientation="vertical"
                        android:id="@+id/uwu_exit"
                        android:background="@drawable/uwu_background_material"
                        android:paddingTop="10.0dip"
                        android:paddingBottom="10.0dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:layout_alignParentBottom="true"
                        app:layout_anchorGravity="bottom">
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:background="@drawable/uwu_bg_exit"
                            android:padding="5.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="uwuExitApp">
                            <ImageView
                                android:padding="10.0dip"
                                android:layout_width="50.0dip"
                                android:layout_height="50.0dip"
                                android:src="@drawable/uwu_icon_exit"
                                android:scaleType="fitCenter"
                                app:tint="?attr/colorIcon" />
                            <TextView
                                android:textSize="14.0sp"
                                android:textColor="?attr/colorText"
                                android:paddingLeft="8.0dip"
                                android:paddingTop="8.0dip"
                                android:paddingRight="50.0dip"
                                android:paddingBottom="8.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/uwu_exit_title"
                                android:layout_weight="1.0" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>