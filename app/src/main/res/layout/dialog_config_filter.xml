<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/layout_margin_top_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.0dip"
            android:layout_marginBottom="0.0dip"
            android:layout_marginStart="0.0dip"
            android:layout_marginEnd="0.0dip"
            app:cardBackgroundColor="?attr/colorCard"
            app:cardCornerRadius="24.0dip"
            app:cardElevation="0.0dip"
            app:strokeWidth="0.0dip">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.neko.elasticview.ElasticView
                    android:layout_width="match_parent"
                    android:layout_height="150.0dip"
                    android:layout_marginTop="12.0dip"
                    android:layout_marginStart="12.0dip"
                    android:layout_marginEnd="12.0dip"
                    app:cardBackgroundColor="#00000000"
                    app:cardCornerRadius="19.0dip"
                    app:cardElevation="0.0dip"
                    app:rippleColor="#00000000">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/uwu_banner_image_3"
                        android:scaleType="centerCrop"
                        android:elevation="0.0dip" />
                    <View
                        android:background="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.2" />
                    <LinearLayout
                        android:gravity="bottom"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:clipToPadding="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16.0dip"
                                android:layout_marginBottom="16.0dip"
                                android:layout_marginStart="16.0dip"
                                android:layout_marginEnd="5.0dip">
                                <com.neko.circleimageview.CircleImageView
                                    android:layout_width="60.0dip"
                                    android:layout_height="60.0dip"
                                    android:src="@drawable/uwu_banner_profile"
                                    app:civ_border_color="?attr/colorThemeUwu"
                                    app:civ_border_overlay="true"
                                    app:civ_border_width="3.0dip"
                                    app:civ_circle_background_color="?attr/colorBg" />
                            </LinearLayout>
                            <RelativeLayout
                                android:paddingTop="16.0dip"
                                android:paddingBottom="16.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:layout_marginStart="5.0dip"
                                android:layout_marginEnd="5.0dip">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textSize="17.0sp"
                                        android:textColor="@android:color/white"
                                        android:ellipsize="marquee"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/uwu_header_title"
                                        android:singleLine="false" />
                                    <com.neko.marquee.text.AutoMarqueeTextView
                                        android:textSize="14.0sp"
                                        android:textColor="@android:color/white"
                                        android:ellipsize="marquee"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/uwu_fokus_today"
                                        android:singleLine="true"
                                        android:marqueeRepeatLimit="marquee_forever" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.neko.elasticview.ElasticView>
                <com.google.android.material.card.MaterialCardView
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12.0dip"
                    android:layout_marginBottom="12.0dip"
                    android:layout_marginStart="12.0dip"
                    android:layout_marginEnd="12.0dip"
                    app:cardBackgroundColor="?attr/colorThemeUwu"
                    app:cardCornerRadius="19.0dip"
                    app:cardElevation="0.0dip"
                    app:strokeWidth="0.0dip">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:clipToPadding="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16.0dip"
                            android:layout_marginBottom="16.0dip"
                            android:layout_marginStart="16.0dip"
                            android:layout_marginEnd="5.0dip">
                            <LinearLayout
                                android:background="@drawable/uwu_google_shape"
                                android:layout_width="45.0dip"
                                android:layout_height="45.0dip"
                                android:backgroundTint="?attr/colorIcon">
                                <ImageView
                                    android:gravity="center"
                                    android:layout_width="25.0dip"
                                    android:layout_height="25.0dip"
                                    android:layout_marginTop="10.0dip"
                                    android:src="@drawable/uwu_account_group_outline"
                                    android:tint="?attr/colorThemeUwu"
                                    android:layout_marginStart="10.0dip" />
                            </LinearLayout>
                        </LinearLayout>
                        <RelativeLayout
                            android:paddingTop="16.0dip"
                            android:paddingBottom="16.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:layout_marginStart="5.0dip"
                            android:layout_marginEnd="5.0dip">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="17.0sp"
                                    android:textColor="?attr/colorText"
                                    android:ellipsize="marquee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/uwu_group"
                                    android:singleLine="false" />
                                <com.neko.marquee.text.AutoMarqueeTextView
                                    android:textSize="14.0sp"
                                    android:textColor="?attr/colorText"
                                    android:ellipsize="marquee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/title_filter_config"
                                    android:singleLine="true"
                                    android:marqueeRepeatLimit="marquee_forever" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_top_height">
            <Spinner
                android:id="@+id/sp_subscriptionId"
                android:background="@drawable/uwu_bg_spinner"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:foreground="?android:selectableItemBackground" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_top_height">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/server_lab_remarks"
                style="@style/Outline_TextInputLayout">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_keyword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
